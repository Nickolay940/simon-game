.game-field {
  display: flex
  width: 600px
  margin: 0 auto
  justify-content: space-between
}

.circle-container {
  display: flex;
  justify-content: center;
}

.circle {
  width: 150px;
  height: 150px;
  margin: 5px 5px 0 0;
  box-sizing: border-box;
  opacity: 0.6;
}

.circle:hover {
  transform: scale(1.05);
  cursor: pointer;
  box-shadow: 0 0 20px 5px rgba(0, 0, 0, 0.5);
}

.circle:active {
  opacity: 1;
}

.active {
  opacity: 1;
  transform: scale(1.05);
  box-shadow: 0 0 20px 5px rgba(0, 0, 0, 0.5);
}

.left-circle-bottom {
  background-color: #ff0000;
  border-bottom-left-radius: 100%;
}

.rigth-circle-bottom {
  background-color: green;
  border-bottom-right-radius: 100%;
}

.rigth-circle-top {
  background-color: #0000ff;
  border-top-right-radius: 100%;
}

.left-circle-top {
  background-color: yellow;
  border-top-left-radius: 100%;
}

.start-button {
  width: 100px;
  height: 40px;
  border-radius: 25px;
  border: none;
  background-color: blue;
  color: #ffffff;
  cursor: pointer;
}

.start-button:hover {
  transform: scale(1.05);
}

.start-button:focus {
  outline: none;
}

.inputs-container {
  display: flex;
  flex-direction: column;
}

.input-field {
  display: flex;
  justify-content: flex-start;
  padding-bottom: 10px;
}

.faild-msg {
  position: absolute;
  font-size: 25px;
  top: 600px;
  left: 350px;
  display: none;
}

.show-msg {
    display: block;
}